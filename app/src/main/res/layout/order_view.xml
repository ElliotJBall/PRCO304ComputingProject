<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:text="10/04/2017"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNumberOfItemsOrdered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtOrderDate"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txtOrderDate"
        android:text="You ordered a total of :"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtOrderCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:textSize="15sp"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/txtNumberOfItemsOrdered"
        android:layout_alignBottom="@+id/txtNumberOfItemsOrdered"
        android:layout_toStartOf="@+id/txtOrderStatus" />

    <TextView
        android:id="@+id/txtOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Status"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/txtOrderCost"
        android:layout_alignBottom="@+id/txtOrderCost"
        android:layout_alignParentEnd="true" />
</RelativeLayout>