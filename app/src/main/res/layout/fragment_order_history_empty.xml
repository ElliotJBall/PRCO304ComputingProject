<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elliot.automatedorderingsystem.OrderHistory.OrderHistoryEmptyFragment">

    <ImageView
        android:id="@+id/imgNoCurrentOrders"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/emptycart"
        android:layout_below="@+id/txtViewNoOrders"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtViewNoOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:text="Sorry, you haven't placed any orders. Head over to the restaurants to start a new order!"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
