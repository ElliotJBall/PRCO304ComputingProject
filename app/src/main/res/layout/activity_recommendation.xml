<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elliot.automatedorderingsystem.Recommendation.RecommendationActivity"
    android:background="@android:color/white"
    android:id="@+id/recommendationRelativeLayout"
    >

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/recommendationLoadingIndicator"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editPostcode"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="BallGridPulseIndicator" />

    <TextView
        android:id="@+id/txtViewLoadingRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recommendationLoadingIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="25dp"
        android:text="Please wait whilst we generate some recommendations for you."
        android:textAlignment="center"
        android:textSize="16sp" />
</RelativeLayout>
