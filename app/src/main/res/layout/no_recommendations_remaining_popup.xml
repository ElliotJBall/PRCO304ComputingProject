<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtViewNoRecommendationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Sorry, we've run out of restaurants to recommend. Please view the list of all the restaurants."
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageNoRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/norecommendations"
        android:layout_below="@+id/txtViewNoRecommendationsText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnViewAllRestaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageNoRecommendations"
        android:layout_marginTop="31dp"
        android:text="View all restaurants"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:layout_margin="25dp"
        />
</RelativeLayout>