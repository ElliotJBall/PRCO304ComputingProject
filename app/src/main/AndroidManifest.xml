<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elliot.automatedorderingsystem">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/photo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ApplicationTheme">
        <activity android:name=".RestaurantAndMenu.MainActivity" />
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestaurantAndMenu.RestaurantActivity" />
        <activity android:name=".Basket.BasketActivity" />
        <activity android:name=".OrderHistory.OrderHistoryActivity" />
        <activity android:name=".Login.RegisterCustomerActivity" />
        <activity android:name=".Recommendation.RecommendationActivity"></activity>
    </application>

</manifest>